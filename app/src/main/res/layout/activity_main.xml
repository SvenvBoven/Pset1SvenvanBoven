<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    app:layout_editor_absoluteY="0dp"
    tools:context="com.example.dingen.pset1svenvanboven.MainActivity"
    tools:layout_editor_absoluteX="81dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageViewArms"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:contentDescription="TODO"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewShoes"
            app:srcCompat="@mipmap/arms"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageViewShoes"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@mipmap/shoes"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/imageViewBody"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            app:srcCompat="@mipmap/body"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageViewEyes"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/eyes"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageViewMouth"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/mouth"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageViewMustache"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewShoes"
            app:srcCompat="@mipmap/mustache"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageViewNose"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewShoes"
            app:srcCompat="@mipmap/nose"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageViewEyebrows"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/eyebrows"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageViewGlasses"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/glasses"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageViewHat"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/hat"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageViewEars"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:layout_alignBottom="@+id/imageViewShoes"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/imageViewShoes"
            app:srcCompat="@mipmap/ears"
            tools:layout_editor_absoluteY="0dp" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <CheckBox
                android:id="@+id/checkBoxMouth"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:text="Mouth"
                app:layout_constraintStart_toEndOf="@+id/checkBoxEars"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxMustache"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/checkBoxMustache"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:text="Mustache"
                app:layout_constraintStart_toEndOf="@+id/checkBoxEyes"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxNose"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/checkBoxNose"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:text="Nose"
                app:layout_constraintStart_toEndOf="@+id/checkBoxGlasses"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxShoes"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/checkBoxEyes"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:text="Eyes"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxGlasses"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="0dp" />

            <CheckBox
                android:id="@+id/checkBoxGlasses"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:text="Glasses"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxEyebrows"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="0dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <CheckBox
                android:id="@+id/checkBoxArms"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:text="Arms"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxEars"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="0dp" />

            <CheckBox
                android:id="@+id/checkBoxShoes"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:text="Shoes"
                app:layout_constraintStart_toEndOf="@+id/checkBoxEyebrows"
                app:layout_constraintTop_toBottomOf="@+id/imageViewShoes"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/checkBoxHat"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:text="Hat"
                app:layout_constraintStart_toEndOf="@+id/checkBoxArms"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxMouth"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/checkBoxEars"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:text="Ears"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxEyes"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="0dp" />

            <CheckBox
                android:id="@+id/checkBoxEyebrows"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:text="Eyebrows"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxNose"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="477dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</LinearLayout>
